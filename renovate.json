{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": "README.md",
            "depNameTemplate": "pnpm",
            "matchStrings": [
                "with pnpm `(?<currentValue>\\d+\\.\\d+\\.\\d+)`"
            ],
            "datasourceTemplate": "npm"
        }
    ]
}